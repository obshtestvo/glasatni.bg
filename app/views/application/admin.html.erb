<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#">Последни коментари</a></li>
  <li><a href="#">Profile</a></li>
  <li><a href="#">Messages</a></li>
</ul>

<h3>Последни коментари</h3>

<% @comments.each do |c| %>

  <p class="text-muted rating"><%= c.rating %></p>
  <div class="btn-group">
    <%= link_to edit_comment_path(c), class: "btn btn-default btn-xs #{'disabled' if !user_signed_in?}" do %>
      <i class="fa fa-pencil"></i>
    <% end %>
    <%= link_to c, method: :delete, data: { confirm: 'Сигурен ли си, че искаш да изтриеш този коментар?' }, class: "btn btn-default btn-xs #{'disabled' if !user_signed_in?}" do %>
      <i class="fa fa-times"></i>
    <% end %>
  <%= simple_format c.content %>
<% end %>
