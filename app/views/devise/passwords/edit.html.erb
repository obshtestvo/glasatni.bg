<div class="row">
  <div class="col-md-4 col-md-offset-4">

  <h2>Смяна на паролата</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Нова парола" %>
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Повтори новата парола" %>
    <br />
    <%= f.submit "Давай!", class: "btn btn-success" %>
  <% end %>

  </div>
</div>
