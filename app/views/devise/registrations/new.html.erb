<div class="row">
  <div class="col-md-4 col-md-offset-2">

    <h2>Регистрирай се</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :multipart => true }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Поща", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Име", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Парола", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Повтори паролата", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :bio, autocomplete: "off", placeholder: "Ако искате напишете нещо за себе си.", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :subscribed, "Абонирай се за нашият бюлетин" %>
        <%= f.check_box :subscribed %>
      </div>

      <%= f.submit "Хайде!", class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to user_omniauth_authorize_path(:facebook), :class => "btn btn-primary btn-lg navbar-btn" do %>
       <i class="fa fa-facebook fa-lg"></i>&nbsp;&nbsp;&nbsp; Регистрирай се с Facebook
    <% end %>
  </div>
</div>


